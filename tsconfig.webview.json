{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/webview",
    "rootDir": "./webview-src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "removeComments": true,
    "sourceMap": true,
    "declaration": false
  },
  "include": [
    "webview-src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
